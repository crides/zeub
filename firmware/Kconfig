config RTT_LOG
    bool "Enable RTT logging"
    default n
    select LOG
    select DEBUG
    select CONSOLE
    select USE_SEGGER_RTT
    select RTT_CONSOLE

config NEOPIXEL
    bool "Enable neopixel"
    default y
    select SPI
    select NRFX_SPIM0
    select LED_STRIP
    select WS2812_STRIP

config ZEUB_DISPLAY_THREAD_STACK_SIZE
    int "Stack size for UI thread/queue"
    default 2048

config ZEUB_DISPLAY_THREAD_PRIORITY
    int "Thread priority for UI thread/queue"
    default 5

config ZEUB_UI_INIT_PRIORITY
    int "Init priority for UI stuff"
    default 60

config TEMP_UPDATE_INTERVAL_MS
    int "Interval in ms to update temperature display"
    default 3000

config TIME_UPDATE_INTERVAL_S
    int "Interval in seconds to update temperature display"
    default 10

