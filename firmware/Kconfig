config ZEUB
    bool
    default y
    select NFCT_PINS_AS_GPIOS
    select LED
    select PWM
    select LED_PWM
    select SENSOR
    select I2C      #???
    select TMP116   #???

config ZEUB_UI
    bool
    default y
    select DISPLAY
    select LVGL
	select LV_USE_THEME_BASIC
    select LV_USE_LABEL

config ZEUB_BLE
    bool
    default y
    select BT
    select BT_SETTINGS
    select BT_PERIPHERAL
    select BT_GATT_CLIENT
    select BT_SMP
    # select BT_SMP_SC_PAIRING_ONLY
    select FLASH
    select FLASH_MAP
    select SETTINGS
    select NVS

choice SETTINGS_BACKEND
    default SETTINGS_NVS
endchoice

